<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/coordinatorLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="36dp"
    tools:context="com.live.ubu.user.activity.LoginActivity">

    <com.intrusoft.library.FrissonView
        android:id="@+id/wave_head"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_signin"
        android:layout_marginBottom="16dp"
        app:alphaValue="60"
        app:gradientType="linear"
        app:gradient_endColor="#cc000000"
        app:gradient_startColor="#00000000"
        app:src="@drawable/ubu"
        app:tideCount="4"
        app:tideHeight="40dp" />

    <ProgressBar
        android:id="@+id/simpleProgressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:max="100"
        android:progress="50"
        android:visibility="invisible" />

    <Button
        android:id="@+id/btn_signin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:background="@drawable/common_google_signin_btn_text_dark"
        android:onClick="goToSigning"
        android:text="@string/fui_sign_in_with_google"
        android:textColor="@android:color/white" />
</RelativeLayout>
